<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Hospital Management System</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #F3F5F2;
            color: #0C3B2E;
            margin: 0;
        }

        /* Navbar */
        .navbar-custom {
            background-color: #0C3B2E;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            color: #FFBA00 !important;
            font-weight: 600;
            letter-spacing: 1px;
        }

        .nav-link {
            color: #f5f5f5 !important;
            margin-right: 1rem;
        }

            .nav-link:hover {
                color: #FFBA00 !important;
            }

        /* Card container for pages like Login/Register */
        .main-card {
            max-width: 480px;
            margin: 80px auto;
            background: #ffffff;
            border-radius: 16px;
            padding: 40px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

            .main-card h2 {
                color: #0C3B2E;
                font-weight: 600;
                margin-bottom: 25px;
            }

        /* Buttons */
        .btn-custom {
            background-color: #6D9773;
            border: none;
            color: #fff;
            font-weight: 500;
            border-radius: 8px;
            transition: 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #0C3B2E;
            }

        .btn-accent {
            background-color: #B46617;
            border: none;
            color: #fff;
        }

            .btn-accent:hover {
                background-color: #FFBA00;
                color: #0C3B2E;
            }

        /* Footer */
        footer {
            background-color: #0C3B2E;
            color: #fff;
            text-align: center;
            padding: 15px 0;
            margin-top: 60px;
        }

        /* Form elements */
        input.form-control, select.form-control {
            border-radius: 8px;
            border: 1px solid #ccc;
        }

        input:focus, select:focus {
            border-color: #6D9773;
            box-shadow: 0 0 0 0.2rem rgba(109, 151, 115, 0.25);
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">🏥 HMS</a>
            <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Dashboard", "Home")">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Logout", "Auth")">Logout</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Auth")">Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("RegisterPatient", "Auth")">Register</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Body -->
    <div class="container">
        @RenderBody()
    </div>

    <footer>
        © @DateTime.Now.Year Hospital Management System — All Rights Reserved
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
