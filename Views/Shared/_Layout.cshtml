<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Hospital Management System</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        html, body {
            height: 100%; /* Full height */
            margin: 0;
            font-family: 'Inter', sans-serif;
            background-color: #F3F5F2;
            color: #0C3B2E;
            display: flex;
            flex-direction: column; /* Stack navbar, main, footer */
        }

        .navbar-custom {
            background-color: #0C3B2E;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            color: #FFBA00 !important;
            font-weight: 600;
            letter-spacing: 1px;
        }

        .nav-link {
            color: #f5f5f5 !important;
            margin-right: 1rem;
        }

            .nav-link:hover {
                color: #FFBA00 !important;
            }

        main {
            flex: 1; /* Take up all available vertical space */
        }

        .main-card {
            max-width: 480px;
            margin: 80px auto;
            background: #ffffff;
            border-radius: 16px;
            padding: 40px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .btn-custom {
            background-color: #6D9773;
            border: none;
            color: #fff;
            font-weight: 500;
            border-radius: 8px;
            transition: 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #0C3B2E;
            }

        .btn-accent {
            background-color: #B46617;
            border: none;
            color: #fff;
        }

            .btn-accent:hover {
                background-color: #FFBA00;
                color: #0C3B2E;
            }

        input.form-control, select.form-control {
            border-radius: 8px;
            border: 1px solid #ccc;
        }

        input:focus, select:focus {
            border-color: #6D9773;
            box-shadow: 0 0 0 0.2rem rgba(109, 151, 115, 0.25);
        }

        footer {
            background-color: #0C3B2E;
            color: #fff;
            text-align: center;
            padding: 15px 0;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container">
            @{
                string brandUrl;
                if (!User.Identity.IsAuthenticated)
                {
                    brandUrl = Url.Action("Login", "Auth");
                }
                else if (User.IsInRole("Admin"))
                {
                    brandUrl = Url.Action("Index", "AdminDashboard");
                }
                else if (User.IsInRole("Doctor"))
                {
                    brandUrl = Url.Action("Index", "DoctorDashboard");
                }
                else if (User.IsInRole("Patient"))
                {
                    brandUrl = Url.Action("Index", "PatientDashboard");
                }
                else
                {
                    brandUrl = "#";
                }
            }
            <a class="navbar-brand" href="@brandUrl">🏥 HMS</a>

            <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Auth")">Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("RegisterPatient", "Auth")">Register</a></li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <form method="post" asp-controller="Auth" asp-action="Logout" class="d-inline">
                                <button type="submit" class="nav-link btn btn-link p-0">Logout</button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer>
        © @DateTime.Now.Year Hospital Management System — All Rights Reserved
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
