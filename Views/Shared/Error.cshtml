@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 text-center">
    <h1 class="display-4 text-danger">Oops! Something went wrong.</h1>
    <p class="lead">@ViewBag.ErrorMessage</p>

    @if (!string.IsNullOrEmpty(ViewBag.Path))
    {
        <p>Path: @ViewBag.Path</p>
    }

    <a class="btn btn-primary mt-3" href="@Url.Action("Index", "Home")">Go to Home</a>
</div>
