@{
    ViewBag.Title = "Patient Dashboard";
    var patient = ViewBag.Patient;
}

<div class="container mt-5">
    <h2 class="mb-4" style="color:#0C3B2E;">Welcome, @patient.Name</h2>

    <div class="row g-4">
        <!-- Profile -->
        <div class="col-md-3">
            <div class="card bg-success text-white rounded-3 p-3">
                <h5>Profile</h5>
                <p><strong>Email:</strong> @patient.Email</p>
                <a class="btn btn-light btn-sm" href="@Url.Action("EditProfile", "PatientDashboard")">Edit Profile</a>
            </div>
        </div>

        <!-- Appointments -->
        <div class="col-md-3">
            <div class="card bg-warning text-dark rounded-3 p-3">
                <h5>Appointments</h5>
                <p>View or cancel your upcoming appointments</p>
                <a class="btn btn-dark btn-sm" href="@Url.Action("MyAppointments", "Appointment")">My Appointments</a>
            </div>
        </div>

        <!-- Billing -->
        <div class="col-md-3">
            <div class="card bg-info text-white rounded-3 p-3">
                <h5>Billing</h5>
                <p>Check and pay your bills</p>
                <a class="btn btn-light btn-sm" href="@Url.Action("MyBills", "Billing")">My Bills</a>
            </div>
        </div>

        <!-- Medical Records -->
        <div class="col-md-3">
            <div class="card bg-primary text-white rounded-3 p-3">
                <h5>Medical History</h5>
                <p>View your past medical records</p>
                <a class="btn btn-light btn-sm" href="@Url.Action("ViewPatientHistory", "MedicalRecord", new { patientId = patient.PatientId })">View History</a>
            </div>
        </div>
    </div>
</div>
