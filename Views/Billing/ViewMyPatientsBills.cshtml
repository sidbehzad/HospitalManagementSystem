@model IEnumerable<HospitalManagementSystem.Models.Bill>
@{
    ViewBag.Title = "My Bills";
}

<h2>My Bills</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Bill ID</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Bill Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bill in Model)
        {
            <tr>
                <td>@bill.BillId</td>
                <td>@bill.Amount.ToString("C")</td>
                <td>@bill.PaymentStatus</td>
                <td>@bill.BillDate.ToShortDateString()</td>
                <td>
                    @if (bill.PaymentStatus != "Paid")
                    {
                        <form method="post" asp-action="PayBill" asp-controller="Billing">
                            <input type="hidden" name="billId" value="@bill.BillId" />
                            <button type="submit" class="btn btn-accent btn-sm">Pay Now</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-success">Paid</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
