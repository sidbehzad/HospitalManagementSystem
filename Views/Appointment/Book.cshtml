@model HospitalManagementSystem.Dtos.Appointment.BookAppointmentDto
@{
    ViewBag.Title = "Book Appointment";
}

<div class="main-card">
    <h2>Book Appointment</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-warning">@TempData["Error"]</div>
    }

    <form asp-action="Book" method="post">
        <input type="hidden" asp-for="DoctorId" />

        <div class="mb-3">
            <label>Appointment Date</label>
            <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-accent">Book</button>
        <a class="btn btn-custom" href="@Url.Action("MyAppointments", "Appointment")">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
