@model IEnumerable<HospitalManagementSystem.Models.User>

<h2>Admin Dashboard</h2>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card p-3 bg-info text-white">
            <h5>Doctors Count: @ViewBag.DoctorCount</h5>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card p-3 bg-success text-white">
            <h5>Patients Count: @ViewBag.PatientCount</h5>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card p-3 bg-warning text-white">
            <h5>Bills</h5>
            <a class="btn btn-sm btn-light mt-2" href="@Url.Action("Index", "Billing")">Manage Bills</a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card p-3 bg-secondary text-white">
            <h5>Departments</h5>
            <a class="btn btn-sm btn-light mt-2" href="@Url.Action("Index", "Department")">Manage Departments</a>
        </div>
    </div>
</div>

<h4>Users (Admin & Doctors)</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.UserId" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="DeleteUser" asp-route-id="@user.UserId" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="RegisterDoctor" class="btn btn-primary">Register New Doctor</a>
</div>
