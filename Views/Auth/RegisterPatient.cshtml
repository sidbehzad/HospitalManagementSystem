@model HospitalManagementSystem.Dtos.Auth.RegisterDto
@{
    ViewBag.Title = "Patient Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-container">
    <div class="auth-card">
        <h2 class="text-center mb-3" style="color:#0C3B2E;">Register as Patient</h2>
        <p class="text-center text-muted mb-4">Create your hospital account below</p>

        <form asp-action="RegisterPatient" method="post">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Full Name</label>
                    <input asp-for="Name" class="form-control" placeholder="John Doe" required />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Email</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="you@example.com" required />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" required />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Age</label>
                    <input asp-for="Age" type="number" class="form-control" placeholder="Age" required />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Gender</label>
                    <select asp-for="Gender" class="form-select" required>
                        <option value="">Select</option>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Contact Number</label>
                    <input asp-for="Contact" type="text" class="form-control" placeholder="123-456-7890" required />
                </div>

                <div class="col-12">
                    <label class="form-label fw-semibold">Address</label>
                    <textarea asp-for="Address" class="form-control" rows="2" placeholder="Enter your full address" required></textarea>
                </div>
            </div>

            <button type="submit" class="btn btn-custom w-100 mt-4">Register</button>

            <div class="text-center mt-3">
                <small>
                    Already registered?
                    <a href="@Url.Action("Login", "Auth")" style="color:#B46617;text-decoration:none;">Login here</a>
                </small>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #F7F9F8, #E8F2EE);
        font-family: 'Inter', sans-serif;
    }

    .auth-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 90vh;
    }

    .auth-card {
        background: #fff;
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        width: 480px;
    }

    .form-control, .form-select {
        border: 1px solid #C9D6CF;
        border-radius: 8px;
        padding: 10px;
        font-size: 15px;
    }

        .form-control:focus, .form-select:focus {
            border-color: #6D9773;
            box-shadow: 0 0 0 0.15rem rgba(109,151,115,0.25);
        }

    .btn-custom {
        background-color: #0C3B2E;
        color: white;
        font-weight: 600;
        border-radius: 8px;
        padding: 10px 0;
        transition: background 0.3s;
    }

        .btn-custom:hover {
            background-color: #B46617;
        }
</style>
