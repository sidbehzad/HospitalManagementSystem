@model IEnumerable<HospitalManagementSystem.Models.Department>
@{
    ViewBag.Title = "Departments";
}

<h2>Departments</h2>

<!-- Add Department Button -->
<a class="btn btn-accent mb-3" href="@Url.Action("Create", "Department")">Add New Department</a>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model)
        {
            <tr>
                <td>@dept.DepartmentId</td>
                <td>@dept.Name</td>
                <td>
                    <a class="btn btn-sm btn-custom" href="@Url.Action("Update", "Department", new { id = dept.DepartmentId })">Edit</a>
                    <form method="post" asp-action="DeleteDepartment" style="display:inline;">
                        <input type="hidden" name="departmentId" value="@dept.DepartmentId" />
                        <button class="btn btn-sm btn-accent" onclick="return confirm('Are you sure you want to delete this department?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
